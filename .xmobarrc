Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90
       , commands = [ Run Weather "EGPF" ["-t","World: <tempC>Â°C","-L","43","-H","131","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run Cpu ["-w", "2", "-L","3","-H","50","--normal","gray","--high","red"] 10
                    , Run Memory ["-w", "2", "-t","Mem: <usedratio>%"] 10
                    , Run Swap ["-w", "2", "-t","<usedratio>%"] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
