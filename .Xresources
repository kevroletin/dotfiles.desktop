! Enable antialiasing and hinting
! https://wiki.archlinux.org/index.php/X_resources#Xft_resources
! Xft settings ---------------------------------------------------------------
!Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintmedium

!from https://wiki.mpich.org/mpich/index.php/Configure_xterm_Fonts_and_Colors_for_Your_Eyeball
XTerm*faceName: Monospace
XTerm*faceSize: 12
XTerm*vt100*geometry: 80x60
XTerm*saveLines: 16384
XTerm*loginShell: true
XTerm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
XTerm*termName: xterm-color
XTerm*eightBitInput: false

! urxvt used for scratchpad have different windows class
! so define 2 variants: for URxvt and urxvt
URxvt.font: xft:Monospace:size=12
URxvt.scrollBar: false
urxvt.font: xft:Monospace:size=12
urxvt.scrollBar: false

!BLK Cursor
#define _color0        #000d18
#define _color8        #000d18
!RED Tag
#define _color1        #e89393
#define _color9        #e89393
